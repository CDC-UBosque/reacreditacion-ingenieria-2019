// initialization
- blocks = {}

mixin set(key)
	- blocks[key] = this.block

// mixin definition
mixin swiper-container
	div.swiper-container
		div.swiper-wrapper
			block
			- blocks.content()
		
		div.swiper-pagination
		
		div.swiper-scrollbar
		


