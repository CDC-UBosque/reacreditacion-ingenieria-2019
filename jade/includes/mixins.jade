// initialization
- blocks = {}

mixin set(key)
	- blocks[key] = this.block
	

// mixin neuronas left
mixin swiper-info-left(numneurona)
	div.swiper-slide(id=numneurona)
		div.image-neurona
			block
			- blocks.contentsvg()
		
		div.content-neurona
			div.close-button: img(src='images/svg/close.svg')
			div
				block
				- blocks.contentinfo()	
				
				
// mixin neuronas left
mixin swiper-info-right(numneurona)
	div.swiper-slide(id=numneurona)
		
		div.content-neurona
			div.close-button: img(src='images/svg/close.svg')
			div
				block
				- blocks.contentinfo()	
				
		div.image-neurona
			block
			- blocks.contentsvg()


// mixin neuronas individuales
mixin swiper-home(numneurona)
	div.swiper-slide(id=numneurona)
		div.home
			block
			- blocks.content()
				
				
					
				
				
