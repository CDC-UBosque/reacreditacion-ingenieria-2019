// initialization
- blocks = {}

mixin set(key)
	- blocks[key] = this.block
	

// mixin neuronas left
mixin swiper-info-left(numneurona, classneurona)
	div.swiper-slide(id=numneurona class=classneurona)
		div.swiper-lazy-preloader
			div.image-neurona
				block
				- blocks.contentsvg()
			
			div.content-neurona
				div.close-button: img(src='images/svg/close.svg')
				div
					block
					- blocks.contentinfo()	
				
				
// mixin neuronas left
mixin swiper-info-right(numneurona, classneurona)
	div.swiper-slide(id=numneurona class=classneurona)
	
		div.swiper-lazy-preloader
		
			div.content-neurona
				div.close-button: img(src='images/svg/close.svg')
				div
					block
					- blocks.contentinfo()	
					
			div.image-neurona
				block
				- blocks.contentsvg()


// mixin neuronas individuales
mixin swiper-home(numneurona)
	div.swiper-slide(id=numneurona)
		div.home.swiper-lazy-preloader
			block
			- blocks.content()
				
				
					
